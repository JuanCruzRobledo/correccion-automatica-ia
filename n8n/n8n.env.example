# ===========================================
# Configuración de N8N
# ===========================================

# Autenticación básica
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin123

# URLs de Webhooks (para acceso externo)
# Cambiar localhost por tu dominio en producción
WEBHOOK_URL=http://localhost:5678

# Configuración de red
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http

# Zona horaria
GENERIC_TIMEZONE=America/Argentina/Buenos_Aires

# Configuración de ejecución
EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
EXECUTIONS_DATA_PRUNE=true
EXECUTIONS_DATA_MAX_AGE=336

# Permitir autenticación externa (si usas OAuth)
N8N_EXTERNAL_HOOK_FILES=

# Logging
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# Configuración de base de datos de N8N (SQLite por defecto)
DB_TYPE=sqlite
